{
  "manifest_version": 3,
  "name": "SBL Librarian",
  "version": "2.1.0",
  "description": "Extract book details and generate SBL-formatted citations with Liquid Glass UI",
  "permissions": ["clipboardWrite", "storage"],
  "content_scripts": [
    {
      "matches": ["*://ebookcentral.proquest.com/*"],
      "js": ["citation-formatter.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}